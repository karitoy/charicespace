<!--div id="playlist"-->
	<% unless @videos.nil? %>
		<% @videos.each do |video| %>
			<div class="videoitem">
				<div class="videothumb">
					<% if logged_in? %>
						<%= link_to image_tag(video.thumbnail), :action=>"show_video", :controller=>"user", :id=>video %>
					<% else %>
						<img src="<%= video.thumbnail %>", onclick: "playUserVideo('<%= video.filename %>');") %>
					<% end %>
				</div>
				<div class="videotitle"><%= video.video_title %></div>
			</div>
		<% end %>
	<% end %>
